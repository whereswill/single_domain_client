<p id="notice"><%= notice %></p>

<%= render 'top_nav_bar', location: @location %>

<div class="center jumbotron">
  <h1>Features for <%= @location.name %></h1>

  <h2>
    This is the Features page for <%= @location.name %>
  </h2>
</div>

<div class="row">
	<div class="col-md-1">
	</div>
	<div class="col-md-7">
		<div class="col-md-12 body-box" id="features">
			<h3>Features</h3>
			<% if @location.features.empty? %>
				<h4>No Features Yet</h4>
			<% else %>
				<ul>
					<% @location.features.each do |p| %>
					  <li id="feature_<%= p.id %>"><%= p.name %>  <%= link_to p, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_feature' do %><i class="glyphicon glyphicon-trash"></i>
    <% end %></li>
					<% end %>
				</ul>
			<% end %>
		</div>

		<div class="col-md-12 body-box">
			<h3>Ajax Form Submission</h3>
			<p>Submit a feature here to get an <code>AJAX Request</code> event:</p>
			<%= render 'features/form', review: Feature.new(location_id: @location.id) %>
		</div>

		<div class="col-md-12 body-box">
			<h3>Thank you page Form Submission</h3>
			<p>Submit a feature here to get an <code>Thank You Page</code> event:</p>
			<%= render 'features/standard_form', review: Feature.new(location_id: @location.id) %>
		</div>

	</div>

	<div class="col-md-3 sidebar">
		<%= render 'address_card', location: @location %>
	</div>
</div>


	