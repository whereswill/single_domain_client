<p id="notice"><%= notice %></p>

<%= render 'top_nav_bar', location: @location %>

<div class="center jumbotron">
  <h1>About <%= @location.name %></h1>

  <h2>
    This is the Features page for <%= @location.name %>
  </h2>
</div>

<div class="row">

	<div class="col-md-4" id="features">
		<h3>Features</h3>
		<% if @location.features.empty? %>
			<h4>No Features Yet</h4>
		<% else %>
			<ul>
				<% @location.features.each do |p| %>
				  <li><%= p.name %></li>
				<% end %>
			</ul>
			<% end %>
	</div>

	<div class="col-md-4 center">
		<h3>Ajax Form Submission</h3>
		<%= render 'features/form', review: Feature.new(location_id: @location.id) %>
	</div>

	<div class="col-md-4 center">

	</div>

</div>

<div class="row center">
	<%= render 'address_card', location: @location %>
</div>


