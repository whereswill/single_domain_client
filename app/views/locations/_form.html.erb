<%= form_with(model: location, local: true) do |form| %>
  <% if location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :wow_snippet, class: "col-md-4 control-label" %>
    <div class="col-md-8">
    <%= form.text_area :wow_snippet, :rows=>15, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :phone, class: "col-md-4 control-label" %>
    <div class="col-md-8">
    <%= form.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :slug, class: "col-md-4 control-label" %>
    <div class="col-md-8">
    <%= form.text_area :slug, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-default btn-primary" %>
  </div>
<% end %>
